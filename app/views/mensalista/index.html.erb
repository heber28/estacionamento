<p id="notice"><%= notice %></p>

<h1>Mensalista</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensalista.each do |mensalistum| %>
      <tr>
        <td><%= mensalistum.nome %></td>
        <td><%= mensalistum.telefone %></td>
        <td><%= link_to 'Show', mensalistum %></td>
        <td><%= link_to 'Edit', edit_mensalistum_path(mensalistum) %></td>
        <td><%= link_to 'Destroy', mensalistum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

